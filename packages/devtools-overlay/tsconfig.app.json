{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "../devtools-overlay/node_modules/.tmp/tsconfig.app.tsbuildinfo",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "../devtools-overlay/src/**/*.ts",
    "../devtools-overlay/src/**/*.tsx",
    "../devtools-overlay/src/**/*.vue"
  ]
}
